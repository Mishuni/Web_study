<script>
	function countIncrease() {
		var spanObj = document.getElementById("countSpan");
		spanObj.innerHTML = parseInt(spanObj.innerHTML) + 1;

		/* 		if(parseInt(spanObj.innerHTML) > 10){
		 alert("do not click");
		 spanObj.innerHTML = 0;
		 } */

	}
	var cal = "";
	function clickNumber(data){
		if(data="1"){
			monitor.innerText = 1;
		}
		
		
	}
</script>
