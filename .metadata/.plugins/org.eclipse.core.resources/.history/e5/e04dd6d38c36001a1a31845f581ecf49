<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script type="text/javascript">
	$(function() {

		$('#txtname').val("happy");
		$('input:radio').val([ "F" ]);
		// [] 여러개 중 하나
		// 여자가 처음에 selected 되어 있음
		$('#isF').val([ "java", "spring" ]);
		$("#remove").css('backgroundColor','green');
		$("#print_puppy").css('backgroundColor','green');
		$('#btnok').click(function() {

			var msg = "";
			msg += $("#txtname").val() + "\n";
			msg += $("input:radio[name=gender]:checked").val() + "\n";
			// check 되어 있는 값을 가져오기
			msg += $("#isF").val().join("-");
			alert(msg);

		});

		/* if( $("#myForm").children().is('input[type=submit]') ){
			
			alert("TRUE");
			
		}else{
			alert("FALSE");
		} */
		list = "";
		$("#print").click(function() {
			var name = $('#puppy_name').val();
			if(name==""){
				alert("Put puppy's name");
				return false;
			}
			
			var age = $('#puppy_age').val();
			if(age==""){
				alert("Put puppy's age");
				return false;
			}
			list += "강아지 이름:" + $('#puppy_name').val() + "\n";
			list += "강아지 나이:" + $('#puppy_age').val() + "\n\n";
			$("#print_puppy").text(list);
			
			alert($('textarea').val());
			return false;
		});

		$("#remove").click(function() {

			list ="";
			$("#print_puppy").html(list);
			$("#remove").css('backgroundColor','yellow');
			return false;
			
		});
	});
</script>
</head>
